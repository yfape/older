#header{
  height: 75vh;
  width: 100vw;
  position: relative;
  background-color: transparent;
  z-index: 99;
  overflow: hidden;
}
.lt{
  height:70%;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  margin-top: 5vh;
  color: #fff;
}
.lt > image{
  width: 18vw;
  height: 18vw;
  border-radius: 8%;
  /* box-shadow: 0px 1px 3px #1583C9; */
}
.wave{
  position: relative;
  z-index: -1;
  width: 100vw;
  height: 30%;
  background-color: #fff;
}
.wave > view{
  width: 500vw;
  height: 500vw;
  position: relative;
  left: -200vw;
  animation: rotate 10s linear infinite;
}
.wave > .af{
  background-color: #256fff;
  border-radius: 48%;
  top: -490vw;
}
.wave > .as{
  background-color: rgba(80, 187, 255, 0.4);
  top: -990vw;
  border-radius: 47%;
  animation-delay: 0.5s;
}
@keyframes rotate{
  from{transform:rotate(0deg)}
  to{transform:rotate(360deg)}
}

.wait{
  height: 15vh;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #888787;
  animation: fade 2s linear infinite;
}
.sline{
  padding: 0 10px;
}

@keyframes fade{
  0%{opacity: 1;}
  50%{opacity:0}
  100%{opacity: 1;}
}

.copyright{
  position: absolute;
  bottom: 2px;
  padding-right: 2%;
  font-size: 12px;
  color: #888787;
  text-align: right;
  width: 98%;
}