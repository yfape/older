.weui-search-bar{background-color:transparent!important;}
.weui-search-bar__cancel-btn{color:#fff!important;}
.brn{border-radius:4px;}
#mt{padding-top:25px;background-color: #256fff;color:#fff;}
#welcome{padding-bottom: 25px;}

/*  container  */
#container{padding-bottom:70px;}
#container .item{margin-top:20px;background-color:#fff;border-radius:8px;}
#container .item > .header{overflow:hidden;padding:10px 15px;}
#container .item > .header > .logo{height:30px;width:30px;margin-right:10px;}
#container .item > .header > .logo > image{width:100%;height:100%;}
#container .item > .header > .status{line-height:30px;border:1px solid #256fff;box-sizing: border-box;padding:0 5px;color:#256fff;}
.number{overflow: hidden;}

#container .item > .content{overflow: hidden;}
#container .item > .content > .left{padding:10px 3%;width:75%;white-space: nowrap;overflow: hidden;}
#container .item > .content > .right{width:19%;height:70px;background-color:#07C160;border-radius:0px 0px 5px 0px;color:#fff;text-align:center;line-height:70px;white-space: nowrap;}

.logview{width:80vw;margin:20px auto;background-color: #fff;padding:11px 15px;}
.logitem{display:flex;justify-content:space-between;font-size:16px;padding:10px 0;}
.logitem > .title{color:#000}
.logitem > .content{color:#888787}

.teamcard{padding: 5px 15px;background-color: #fff;border-radius: 3px;}
.linein{height:30px;line-height:30px}